# ==========================================
# HAPPENINGS BOT - Environment Configuration
# ==========================================
# This bot complies with Reddit's Responsible Builder Policy
# See docs/REDDIT_BOT_PRD.md for full compliance details
# ==========================================

# LLM Provider API Keys
# Note: These are pre-trained APIs. We do NOT train models on Reddit data.
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Reddit API Credentials (Required)
# Get these from https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=Happenings Event Bot v1.0 (by /u/Happenings_bot)
REDDIT_USERNAME=Happenings_bot
REDDIT_PASSWORD=your_reddit_password

# Bot Configuration
REDDIT_BOT_USERNAME=Happenings_bot              # The bot account username
MAX_MENTIONS_PER_RUN=25                          # Max mentions to fetch per run
MARK_MENTIONS_AS_READ=true                       # Mark processed mentions as read in inbox

# Notification System (Choose one)
# Telegram (Recommended)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
# OR Slack
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Approval Configuration (REQUIRED for Reddit compliance)
AUTO_APPROVE=false                               # MUST be false in production (human review required)
APPROVAL_NOTIFICATION_CHANNEL=telegram           # "telegram" or "slack"

# Webhook Server Configuration
WEBHOOK_ENABLED=true                             # Enable webhook server for approval callbacks
WEBHOOK_PORT=3000                                # Port for webhook server
WEBHOOK_BASE_URL=https://your-server.com         # Your public URL for webhooks

# Rate Limiting (Reddit Policy Compliance)
RATE_LIMIT_POSTS_PER_HOUR=2                      # Maximum responses per hour (enforced)
POST_FRESHNESS_HOURS=2                           # Only process mentions < N hours old
INTENT_THRESHOLD=0.8                             # Confidence threshold for genuine requests

# Testing
USE_TEST_DATA_REDDIT=true                       # Use local test data instead of Reddit API
