# LLM Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Reddit API Credentials
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=EventHive Social Sniper Bot v1.0
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password

# Twitter/X API Credentials
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# EventHive Database
EVENTHIVE_DB_URL=your_mongodb_or_api_url

# Notification System (Choose one or both)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
# OR/AND
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_SIGNING_SECRET=your_slack_signing_secret

# Approval Configuration
AUTO_APPROVE=false                              # Set to "true" to skip human approval
APPROVAL_NOTIFICATION_CHANNEL=telegram          # "telegram" or "slack" - which channel to use for notifications
APPROVAL_DB_URL=file:./approvals.db            # Database for storing pending approvals
APPROVE_EDITED_IMMEDIATELY=false                # Auto-post edited drafts without re-approval

# Webhook Server Configuration
WEBHOOK_ENABLED=true                            # Enable webhook server for approvals (auto-disabled if AUTO_APPROVE=true)
WEBHOOK_PORT=3000                               # Port for webhook server

# Agent Configuration
TARGET_CITIES=Bangalore,Mumbai,Delhi,Pune,Hyderabad
POST_FRESHNESS_HOURS=2                          # Only process posts within this many hours
INTENT_THRESHOLD=0.8                            # Confidence threshold for high-intent classification (0-1)
RATE_LIMIT_POSTS_PER_HOUR=2                     # Maximum posts to process per hour

